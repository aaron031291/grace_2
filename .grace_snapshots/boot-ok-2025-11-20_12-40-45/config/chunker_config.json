{
  "version": "1.0",
  "chunk_size_chars": 1000,
  "overlap_chars": 200,
  "min_chunk_size": 100,
  "max_chunk_size": 2000,
  "sentence_pattern": "(?<=[.!?])\\s+",
  "quality_threshold": 0.7,
  "enable_snapshot_testing": true,
  "snapshot_file": "./config/chunker_snapshots.json",
  "environments": {
    "development": {
      "chunk_size_chars": 800,
      "overlap_chars": 150
    },
    "production": {
      "chunk_size_chars": 1200,
      "overlap_chars": 250,
      "enable_snapshot_testing": true
    },
    "testing": {
      "chunk_size_chars": 500,
      "overlap_chars": 100,
      "enable_snapshot_testing": false
    }
  }
}