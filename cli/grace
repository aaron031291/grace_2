#!/usr/bin/env bash
# Grace CLI wrapper script

# Find Grace root directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
GRACE_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

# Activate virtual environment if it exists
if [ -f "$GRACE_ROOT/.venv/bin/activate" ]; then
    source "$GRACE_ROOT/.venv/bin/activate"
elif [ -f "$GRACE_ROOT/venv/bin/activate" ]; then
    source "$GRACE_ROOT/venv/bin/activate"
fi

# Run the orchestrator
python -m backend.unified_grace_orchestrator "$@"



