{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src/main.tsx",
    "src/AppChat.tsx",
    "src/AppChat.css",
    "src/index.css",
    "src/config.ts",
    "src/components/ChatPanel.tsx",
    "src/components/ChatPanel.css",
    "src/components/BackgroundTasksDrawer.tsx",
    "src/components/BackgroundTasksDrawer.css",
    "src/components/TelemetryStrip.tsx",
    "src/components/TelemetryStrip.css",
    "src/components/HistorySearch.tsx",
    "src/components/HistorySearch.css",
    "src/components/UserPresence.tsx",
    "src/components/UserPresence.css",
    "src/components/HealthMeter.tsx",
    "src/components/RemoteCockpit.tsx",
    "src/api/chat.ts",
    "src/api/config.ts",
    "src/api/voice.ts",
    "src/api/remote.ts",
    "src/api/tasks.ts",
    "src/api/history.ts",
    "src/api/reminders.ts",
    "src/api/presence.ts",
    "src/hooks/useNotifications.ts",
    "src/types/**/*"
  ]
}
